<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_space"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_share_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享者"
                android:textColor="@color/colorPrimary" />

            <ImageView
                android:id="@+id/iv_share_file_type"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_below="@+id/tv_share_by"
                android:contentDescription="The file type "
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_space"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_share_file_path"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_space"
                android:ellipsize="end"
                android:hint="文件路径"
                android:singleLine="true" />

            <EditText
                android:id="@+id/et_share_file_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_space"
                android:hint="文章标题" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_share_file_choose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_space"

            android:text="重新选择文件" />

        <Button
            android:id="@+id/btn_share_file_share"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_space"
            android:text="分享" />
    </LinearLayout>

</ScrollView>