<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_space"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_dialog_share_detail_file_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="file_title"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_big" />

                <ImageView
                    android:id="@+id/iv_dialog_share_detail_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:contentDescription="close share f|ile detail dialog"
                    android:padding="@dimen/normal_space"
                    android:src="@drawable/ic_clear_black_24dp" />
            </RelativeLayout>


            <TextView
                android:id="@+id/tv_dialog_share_detail_user_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user_by"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/tv_dialog_share_detail_file_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="time"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_dialog_share_detail_file_download"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:contentDescription="download share file"
                android:src="@drawable/ic_cloud_download_black_24dp" />

            <ImageView
                android:id="@+id/iv_dialog_share_detail_file_look"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:contentDescription="look file"
                android:src="@drawable/ic_cloud_done_black_24dp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
