<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/normal_space">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_sharefile_user_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tv_sharefile_user_by"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_default" />

        <TextView
            android:id="@+id/tv_sharefile_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_sharefile_user_by"
            android:paddingLeft="@dimen/normal_space"
            android:paddingTop="@dimen/normal_space"
            android:text="tv_sharefile_time"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/tv_sharefile_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_sharefile_time"
            android:text="tv_sharefile_title"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_big" />

        <ImageView
            android:id="@+id/iv_sharefile_type"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_sharefile_title"
            android:contentDescription="" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_sharefile_file_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/normal_space"
            android:drawableLeft="@drawable/ic_attachment_black_24dp"
            android:drawablePadding="@dimen/normal_space" />

        <TextView
            android:id="@+id/tv_sharefile_download_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="@dimen/normal_space"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/ic_file_download_black_24dp"
            android:drawablePadding="@dimen/normal_space" />

        <TextView
            android:id="@+id/tv_sharefile_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/normal_space"
            android:drawableLeft="@drawable/ic_share_black_24dp"
            android:drawablePadding="@dimen/normal_space" />

    </LinearLayout>
</LinearLayout>